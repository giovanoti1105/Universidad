package primerSemestre;

import javax.swing.JOptionPane;

public class ColoresResistencias
{
	//definicion de constantes
	public static final int NEGRO=0;
	public static final int MARRON=1;
	public static final int ROJO=2;
	public static final int NARANJA=3;
	public static final int AMARILLO=4;
	public static final int VERDE=5;
	
	// CONSTRUCTOR
	public ColoresResistencias()
	{
	}

	
	public static void main(String[] args)
	{
		String nomColor ="";
		int color;
		// conversion de numero string a entero
		String cadNumero = JOptionPane.showInputDialog("Numero");
		color = Integer.parseInt(cadNumero);
		
		switch (color)
		{
		case NEGRO: nomColor="NEGRO";
			break;
		case MARRON: nomColor="MARRON";
				break;
		case ROJO: nomColor="ROJO";
				break;
		case NARANJA: nomColor="NARANJA";
				break;
		case AMARILLO: nomColor="AMARILLO";
				break;
		case VERDE: nomColor="VERDE";
				break;
		default:
			break;
		}
		JOptionPane.showMessageDialog(null,"Color seleccionado :" + nomColor);
	}
}
