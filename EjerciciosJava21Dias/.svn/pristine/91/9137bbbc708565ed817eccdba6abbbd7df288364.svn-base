package Varios;

class NumberReader
{
	// funcion que conviente un string en numero
	String ConvertNum(int val)
	{
		switch (val)
		{
		case 0:
			return "cero ";
		case 1:
			return "uno ";
		case 2:
			return "dos ";
		case 3:
			return "tres ";
		case 4:
			return "cuatro ";
		case 5:
			return "cinco ";
		default:
			return "mas de cinco no es valido";
		}

	}

	public static void main(String[] args)
	{
		NumberReader objNumberReader = new NumberReader();
		String num = objNumberReader.ConvertNum(1) + objNumberReader.ConvertNum(7);
		System.out.println("El valor es " + num);

	}

}
