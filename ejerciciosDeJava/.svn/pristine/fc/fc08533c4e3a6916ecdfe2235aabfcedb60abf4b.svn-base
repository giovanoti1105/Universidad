package EjerciciosProyectosInformaticos;

public class Distancia
{
	// variable de clase 
	float distancia;

	// constructor inicializa dstancia en 0
	/*
	public Distancia()
	{
		distancia=0;
	}
	*/
	// constructor con un argumento de tipo float
	public Distancia(float distancia)
	{
		this.distancia=distancia;
	}
	public float getDistancia()
	{
		return distancia;
	}
	public final void setDistancia(float distancia)
	{
		this.distancia = distancia;
	}
	void incrementaDistancia(float incremento)
	{
		distancia+=incremento;
	}
}
