package EjerciciosProyectosInformaticos.tipos;
public class Persona
{
	// Definicion de variables de clase
	String nombre;
	String apellidos;
	String telefono;
	
	//constructores de la clase
	Persona (String nombre, String apellidos, String telefono) 
	{
		this.nombre=nombre;
		this.apellidos=apellidos;
		this.telefono=telefono;
	}
	Persona()
	{
	}
	// metodos get para retornar los valores de los nombres
	
	String getNombre()
	{
		return nombre;
	}
	String getApellidos()
	{
		return apellidos;
	}
	String getTelefono()
	{
		return telefono;
	}
	// funciones para modificar las variables de clase
	void setTelefono(String nuevoTelefono)
	{
		telefono= nuevoTelefono;
	}
	void setNombre(String nuevoNombre)
	{
		nombre=nuevoNombre;
	}
	void setApellido (String nuevoApellido)
	{
		apellidos=nuevoApellido;
	}
	void iniciaAtributos()
	{
		nombre="";
		apellidos="";
		telefono="";
	}
}