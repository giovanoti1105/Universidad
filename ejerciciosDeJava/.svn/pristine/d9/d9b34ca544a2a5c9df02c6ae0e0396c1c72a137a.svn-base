package Varios;

public class CheckString {
	public static void main (String args[])
	{
		String str = "esto es una cadena de tipo String";
		System.out.println("La cadena es : " +str);
		System.out.println("El tamaño de la cadena es : " +str.length());
		System.out.println("El caracter en la posicion 6 es : " + str.charAt(6));
		System.out.println("los substring de la posicion 24 hasta la 31 son : " + str.substring(24,31) );
		System.out.println("Indexando por el caracrter espacio : " +str.indexOf('a'));
		System.out.println("cadena en mayuscula : " +str.toUpperCase());
		System.out.println("indexando a la cadena " + "substring \"es\" : " + str.indexOf("es"));
		
	}

}
