package EjerciciosProyectosInformaticos.Enumeraciones;

import javax.swing.text.StyledEditorKit.ForegroundAction;

public enum Semana
{
	LUNES("Primer dia de la semana"), MARTES("Segundo dia de la semana"), MIERCOLES("Tercer dia de la semana"), JUEVES("Cuarto dia de la semana"), VIERNES("Quinto dia de la semana"), SABADO("Sexto dia de la semana"), DOMINGO(
			"Septimo dia de la semana");

	private String comentario;

	// constructor
	Semana(String comentario)
	{
		this.comentario = comentario;
	}

	public String getComentario()
	{
		return comentario;
	}

	public static void main(String[] args)
	{
		for (Semana dia : Semana.values())
		{
			System.out.print(dia.name());
			System.out.println(" " + dia.ordinal());
			System.out.println(dia.getComentario());
		}
		{
		}
	}
}
